{% extends 'base.html.twig' %}

{% block title %}Hello GameLifeController!{% endblock %}

{% block stylesheets %}
    {{ parent() }}
{% endblock %}

{% block body %}
<div class="container">
    <div class="row">
        <div class="col">
            <div class="form-group">
                <label for="game-of-life-width">Width</label>
                <input type="number" class="form-control" id="game-of-life-width" value="100">
            </div>
        </div>
        <div class="col">
            <div class="form-group">
                <label for="game-of-life-height">Height</label>
                <input type="number" class="form-control" id="game-of-life-height" value="100">
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-auto p-3">
            <button class="btn btn-primary" onclick="window.gameOfLife.draw()">Create</button>
        </div>
        <div class="col-auto p-3">
            <button class="btn btn-success" onclick="window.gameOfLife.start()">Start</button>
        </div>
        <div class="col-auto p-3">
            <button class="btn btn-danger" onclick="window.gameOfLife.stop()">Stop</button>
        </div>
    </div>
    <div class="row">
        <div class="col p-3">
            <canvas id="game-of-life"></canvas>
        </div>
    </div>
</div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {{ encore_entry_script_tags('game_of_life') }}
{% endblock %}
