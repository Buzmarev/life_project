{% extends 'base.html.twig' %}

{% block meta_title %}Saper{% endblock %}

{% block stylesheets %}
    {{ parent() }}
{% endblock %}

{% block title %}Saper{% endblock %}

{% block body %}
    <div class="container">
        <div class="row">
            <div class="col">
                <div class="form-group">
                    <label for="saper-width">Width</label>
                    <input type="number" class="form-control" id="saper-width" value="20">
                </div>
            </div>
            <div class="col">
                <div class="form-group">
                    <label for="saper-height">Height</label>
                    <input type="number" class="form-control" id="saper-height" value="20">
                </div>
            </div>
            <div class="col">
                <div class="form-group">
                    <label for="saper-height">Bomb count</label>
                    <input type="number" class="form-control" id="saper-bomb-count" value="100">
                </div>
            </div>
        </div>
        <div class="row justify-content-center">
            <div class="col-auto p-3">
                <button class="btn btn-primary" onclick="window.saper.draw()">Create</button>
            </div>
        </div>
        <div class="row justify-content-center">
            <canvas id="saper" class="m-3" onclick="window.saper.checkPoint(event)" oncontextmenu="window.saper.markPoint(event)"></canvas>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {{ encore_entry_script_tags('saper') }}
{% endblock %}
